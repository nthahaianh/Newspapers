<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="text_style2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="text_style_author">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="text_style_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="et_search_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15dp</item>
        <item name="drawableTint">@color/black</item>
    </style>

    <style name="btn_pin_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@drawable/bg_btn</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:onClick">onClickButton</item>
    </style>

    <style name="image_pin">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/ic_circle</item>
    </style>

    <style name="guideline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:orientation">horizontal</item>
    </style>
</resources>